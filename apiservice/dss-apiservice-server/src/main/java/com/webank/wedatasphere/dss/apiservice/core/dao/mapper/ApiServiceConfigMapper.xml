<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.webank.wedatasphere.dss.apiservice.core.dao.ApiServiceConfigDao">
    <resultMap id="apiServiceMap" type="ApiServiceVo">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="path" column="path"/>
        <result property="protocol" column="protocol"/>
        <result property="method" column="method"/>
        <result property="tag" column="tag"/>
        <result property="scope" column="scope"/>
        <result property="description" column="description"/>
        <result property="status" column="status"/>
        <result property="type" column="type"/>
        <result property="createTime" column="create_time"/>
        <result property="modifyTime" column="modify_time"/>
        <result property="creator" column="creator"/>
        <result property="modifier" column="modifier"/>
        <result property="scriptPath" column="script_path"/>
        <result property="resourceId" column="resource_id"/>
        <result property="version" column="version"/>
<!--        <result property="content" column="content"/>-->
    </resultMap>

    <sql id="fields">
        `name`,`path`,`protocol`,`method`,`tag`, `scope`,`description`,`status`,`type`,`create_time`,
        `modify_time`,`creator`,`modifier`,`script_path`,`resource_id`,`version`
    </sql>

    <sql id="fields_query">
        `id`, `name`,`path`,`protocol`,`method`, `tag`, `scope`,`description`,`status`,`type`,`create_time`,
        `modify_time`,`creator`,`modifier`,`script_path`,`resource_id`,`version`
    </sql>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id" parameterType="ApiServiceVo">
        <![CDATA[INSERT INTO `dss_oneservice_config`(]]>
        <include refid="fields"/>
        <![CDATA[) VALUES(#{name}, #{path}, #{protocol}, #{method}, #{tag}, #{scope}, #{description},
        #{status}, #{type}, now(), now(), #{creator}, #{modifier}, #{scriptPath},#{resourceId},#{version}
        )]]>
    </insert>

    <update id="update">
        <![CDATA[UPDATE `dss_oneservice_config`]]>
        <set>
            <if test="path != null and path != ''">
                <![CDATA[ `path` = #{path}, ]]>
            </if>
            <if test="protocol != null and protocol != ''">
                <![CDATA[ `protocol` = #{protocol}, ]]>
            </if>

            <if test="method != null and method != ''">
                <![CDATA[ `method` = #{method}, ]]>
            </if>

            <if test="tag != null and tag != ''">
                <![CDATA[ `tag` = #{tag}, ]]>
            </if>

            <if test="scope != null and scope != ''">
                <![CDATA[ `scope` = #{scope}, ]]>
            </if>

            <if test="description != null and description != ''">
                <![CDATA[ `description` = #{description}, ]]>
            </if>

            <if test="status != null and status != ''">
                <![CDATA[ `status` = #{status}, ]]>
            </if>

            <if test="type != null and type != ''">
                <![CDATA[ `type` = #{type}, ]]>
            </if>
            <if test="modifier != null and modifier != ''">
                <![CDATA[ `modifier` = #{modifier}, ]]>
            </if>
            <if test="resourceId != null and resourceId != ''">
                <![CDATA[ `resource_id` = #{resourceId}, ]]>
            </if>
            <if test="version != null and version != ''">
                <![CDATA[ `version` = #{version}, ]]>
            </if>
            <![CDATA[ `modify_time` = now() ]]>
        </set>
        <where>
            `id` = #{id}
        </where>
    </update>

    <select id="query" resultMap="apiServiceMap">
        <![CDATA[SELECT ]]>
        <include refid="fields_query"/>
        <![CDATA[ FROM `dss_oneservice_config` ]]>
        <where>
            <![CDATA[ 1 = 1 ]]>
            <if test="name != null and name != ''">
                <![CDATA[AND `name` like concat('%', #{name}, '%')]]>
            </if>

            <if test="tag != null and tag != ''">
                <![CDATA[AND `tag` like concat('%', #{tag}, '%')]]>
            </if>

            <if test="status != null">
                <![CDATA[AND `status` = #{status} ]]>
            </if>
            <if test="creator != null and creator != ''">
                <![CDATA[AND `creator` like concat('%', #{creator}, '%')]]>
            </if>
<!--            <if test="idList.size() > 0">-->
<!--                <choose>-->
<!--                    <when test="idList.size() == 1">-->
<!--                        <foreach collection="idList" separator="" item="item" open="AND " close="">-->
<!--                            <![CDATA[`id` = #{item}]]>-->
<!--                        </foreach>-->
<!--                    </when>-->
<!--                    <otherwise>-->
<!--                        <foreach collection="idList" separator="," item="item"-->
<!--                                 open="AND `id` IN(" close=")">-->
<!--                            <![CDATA[#{item}]]>-->
<!--                        </foreach>-->
<!--                    </otherwise>-->
<!--                </choose>-->
<!--            </if>-->
        </where>
    </select>

    <select id="queryByScriptPath" resultMap="apiServiceMap">
        <![CDATA[SELECT ]]>
        <include refid="fields_query"/>
        <![CDATA[ FROM `dss_oneservice_config` ]]>
        <where>
            <![CDATA[ `script_path` = #{scriptPath} ]]>
        </where>
    </select>

    <select id="queryByScriptPathVersion" resultMap="apiServiceMap">
        <![CDATA[SELECT ]]>
        <include refid="fields_query"/>
        <![CDATA[ FROM `dss_oneservice_config` ]]>
        <where>
            <![CDATA[ `script_path` = #{scriptPath} ]]>
            and
            <![CDATA[ `version` = #{version} ]]>
        </where>
    </select>

    <select id="queryByPath" resultMap="apiServiceMap">
        <![CDATA[SELECT ]]>
        <include refid="fields_query"/>
        <![CDATA[ FROM `dss_oneservice_config` ]]>
        <where>
            <![CDATA[ `path` = #{path} ]]>
        </where>
    </select>

    <select id="queryCountByPath" resultType="java.lang.Integer">
        <![CDATA[SELECT ]]>
        count(1)
        <![CDATA[ FROM `dss_oneservice_config` ]]>
        <where>
            <![CDATA[ `script_path` != #{scriptPath} ]]>
            and 
            <![CDATA[ `path` = #{path} ]]>
        </where>
    </select>

    <select id="queryCountByName" resultType="java.lang.Integer">
        <![CDATA[SELECT ]]>
        count(1)
        <![CDATA[ FROM `dss_oneservice_config` ]]>
        <where>
            <![CDATA[ `name` = #{name} ]]>
        </where>
    </select>
    
    <update id="enableApi">
        <![CDATA[update `dss_oneservice_config` ]]>
        <set>
            <![CDATA[ `status` = 1 ]]>
        </set>
        <where>
            <![CDATA[ `id` = #{id} ]]>
        </where>
    </update>

    <update id="disableApi">
        <![CDATA[update `dss_oneservice_config` ]]>
        <set>
            <![CDATA[ `status` = 0 ]]>
        </set>
        <where>
            <![CDATA[ `id` = #{id} ]]>
        </where>
    </update>
</mapper>
